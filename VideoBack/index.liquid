<div class="video-banner relative w-full h-screen">
    {%- if section.settings.show_overlay -%}
      <div class="absolute inset-0 z-10" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity }};">
      </div>
    {%- endif -%}
  
    <div class="video-container absolute inset-0 w-full h-full">
      {%- if section.settings.desktop_video_url != blank -%}
        <video 
          autoplay 
          loop 
          muted 
          playsinline
          class="absolute inset-0 w-full h-full object-cover hidden md:block">
          <source src="{{ section.settings.desktop_video_url }}" type="video/mp4">
        </video>
      {%- endif -%}
  
      {%- if section.settings.mobile_video_url != blank -%}
        <video 
          autoplay 
          loop 
          muted 
          playsinline
          class="absolute inset-0 w-full h-full object-cover md:hidden">
          <source src="{{ section.settings.mobile_video_url }}" type="video/mp4">
        </video>
      {%- endif -%}
    </div>
  
    <div class="content-wrapper absolute inset-0 z-20 flex flex-col items-center justify-center h-full text-center px-4">
      {%- if section.settings.heading != blank -%}
        <h1 class="text-4xl md:text-6xl font-bold mb-4" style="color: {{ section.settings.text_color }}">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}
  
      {%- if section.settings.subtext != blank -%}
        <p class="text-lg md:text-xl max-w-3xl mx-auto mb-8" style="color: {{ section.settings.text_color }}">
          {{ section.settings.subtext }}
        </p>
      {%- endif -%}
  
      <!-- {%- if section.settings.show_rating -%}
